---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-white/02 backdrop-blur-lg shadow-md sticky top-0 z-50">
    <nav class="flex items-center justify-between flex-wrap p-6">
        <h2 class="flex items-center flex-shrink-0 text-black mr-6">
            <a href="/" class="font-semibold text-xl tracking-tight">{SITE_TITLE}</a>
        </h2>
        <div class="block lg:hidden">
            <button class="hamburger flex items-center px-3 py-2 border rounded text-black border-black" aria-label="Toggle menu" aria-expanded="false">
                <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
            </button>
        </div>
        <div class="links-container hidden w-full  flex-grow lg:flex lg:items-center lg:w-auto">
            <div class="text-sm lg:flex-grow">
                <HeaderLink href="/" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-black mr-4">Home</HeaderLink>
                <HeaderLink href="/about" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-black mr-4">About</HeaderLink>
                <HeaderLink href="/terminal" class="block mt-4 lg:inline-block lg:mt-0 text-black hover:text-black">Terminal</HeaderLink>
            </div>
            <div>
                <a href="https://m.webtoo.ls/@astro" target="_blank" class="inline-block text-sm px-4 py-2 leading-none border rounded text-black border-black mt-4 lg:mt-0">Follow on Mastodon</a>
                <a href="https://twitter.com/astrodotbuild" target="_blank" class="inline-block text-sm px-4 py-2 leading-none border rounded text-black border-black mt-4 lg:mt-0">Follow on Twitter</a>
                <a href="https://github.com/withastro/astro" target="_blank" class="inline-block text-sm px-4 py-2 leading-none border rounded text-black border-black mt-4 lg:mt-0">GitHub Repo</a>
            </div>
        </div>
    </nav>
</header>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.querySelector('.hamburger');
    const linksContainer = document.querySelector('.links-container');

    hamburger.addEventListener('click', () => {
        const expanded = hamburger.getAttribute('aria-expanded') === 'true' || false;
        hamburger.setAttribute('aria-expanded', !expanded);
        linksContainer.classList.toggle('hidden');
        linksContainer.classList.toggle('flex');
    });
});
</script>
